{
  "name": "maestro-roku-core",
  "version": "0.2.3",
  "description": "A development platform for building roku channels in brighterscript. Core Library",
  "directories": {
    "doc": "docs"
  },
  "files": [
    "dist/**/!(manifest)*"
  ],
  "dependencies": {
    "log": "maestro-roku-log",
    "mc": "maestro-roku-core",
    "mv": "maestro-roku-view",
    "mioc": "maestro-roku-ioc"
  },
  "devDependencies": {
    "brighterscript": "^0.15.0",
    "ropm": "^0.5.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/georgejecook/maestro-roku-core.git"
  },
  "keywords": [
    "ropm",
    "brightscript",
    "mvvm",
    "framework",
    "fun"
  ],
  "author": "George Cook",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/georgejecook/maestro-roku-core/issues"
  },
  "homepage": "https://github.com/georgejecook/maestro-roku-core#readme",
  "ts-node": {
    "transpileOnly": true,
    "compileOptions": {
      "incremental": true,
      "allowJs": false
    }
  },
  "ropm": {
    "rootDir": "src",
    "packageRootDir": "dist"
  },
  "scripts": {
    "install-local": "node scripts/install-local.js",
    "install-pull-local": "node scripts/install-local.js --pull",
    "uninstall-local": "node scripts/uninstall-local.js",
    "build": "npx bsc",
    "test": "cd tests && ropm install && bsc"
  }
}
