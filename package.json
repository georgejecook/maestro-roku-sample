{
  "name": "maestro-roku-sample",
  "version": "0.2.4",
  "description": "A development platform for building roku channels in brighterscript. Sample app",
  "main": "index.js",
  "dependencies": {
    "log": "npm:roku-log@^0.9.3",
    "maestro": "npm:maestro-roku@0.54.7"
  },
  "devDependencies": {
    "@rokucommunity/bslint": "0.7.1",
    "@types/chai": "^4.2.3",
    "@types/chai-subset": "^1.3.1",
    "@types/fs-extra": "^9.0.11",
    "@types/mocha": "^8.2.2",
    "@types/node": "^16.3.3",
    "@types/sinon": "^10.0.13",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "brighterscript": "0.61.2",
    "roku-log-bsc-plugin": "^0.7.0",
    "ropm": "0.10.5",
    "maestro-roku-bsc-plugin": "^0.25.7",
    "rooibos-roku": "^5.3.5",
    "roku-deploy": "3.7.0",
    "ts-node": "^10.1.0",
    "typescript": "4.2.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/georgejecook/maestro-roku-sample.git"
  },
  "keywords": [
    "ropm",
    "brightscript",
    "mvvm",
    "framework",
    "fun"
  ],
  "author": "George Cook",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/georgejecook/maestro-roku-sample/issues"
  },
  "homepage": "https://github.com/georgejecook/maestro-roku-sample#readme",
  "ts-node": {
    "transpileOnly": true,
    "compileOptions": {
      "incremental": true,
      "allowJs": false
    }
  },
  "ropm": {
    "rootDir": "src",
    "packageRootDir": "dist",
    "noprefix": [
      "maestro"
    ]
  },
  "scripts": {
    "update-schema": "npm run build && cd build && npx scenegraph-schema -o ../.vscode/project.xsd",
    "_postinstall": "npx ropm copy",
    "build": "node scripts/run.js && npx ts-node scripts/cleanup-build.js",
    "build-test": "node scripts/run-test.js",
    "build-sample-app": "node scripts/run-sample-app.js",
    "build-local": "node scripts/run-local.js && npx ts-node scripts/cleanup-build.js",
    "lint": "npx bsc"
  }
}
