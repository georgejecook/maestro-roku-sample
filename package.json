{
  "name": "maestro-roku-core",
  "version": "0.2.0",
  "description": "A development platform for building roku channels in brighterscript. Core Library",
  "directories": {
    "doc": "docs"
  },
  "files": [
    "dist/**/!(manifest)*"
  ],
  "dependencies": {
    "log": "maestro-roku-log",
    "mc": "maestro-roku-core",
    "mv": "maestro-roku-view",
    "mioc": "maestro-roku-ioc"
  },
  "devDependencies": {
    "fs-extra": "^5.0.0",
    "gulp-header": "^2.0.7",
    "gulp-unzip": "^1.1.0",
    "roku-deploy": "^2.0.0",
    "ts-node": "^8.1.0",
    "@types/fs-extra": "^8.0.0",
    "brighterscript": "^0.15.0",
    "del": "^3.0.0",
    "docdash": "^0.4.0",
    "gulp": "^4.0.1",
    "gulp-clean": "^0.4.0",
    "gulp-concat": "^2.6.1",
    "gulp-copy": "^4.0.1",
    "gulp-rm-lines": "0.0.9",
    "gulp-zip": "^5.0.0",
    "gulpclass": "^0.2.0",
    "ink-docstrap": "1.3.0",
    "jsdoc": "3.5.5",
    "minami": "^1.2.3",
    "typescript": "^3.4.5",
    "vinyl-paths": "^2.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/georgejecook/maestro-roku-core.git"
  },
  "keywords": [
    "ropm",
    "brightscript",
    "mvvm",
    "framework",
    "fun"
  ],
  "author": "George Cook",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/georgejecook/maestro-roku-core/issues"
  },
  "homepage": "https://github.com/georgejecook/maestro-roku-core#readme",
  "ts-node": {
    "transpileOnly": true,
    "compileOptions": {
      "incremental": true,
      "allowJs": false
    }
  },
  "ropm": {
    "rootDir": "src",
    "packageRootDir": "dist"
  },
  "scripts": {
    "install-local": "node scripts/install-local.js",
    "install-pull-local": "node scripts/install-local.js --pull",
    "uninstall-local": "node scripts/uninstall-local.js",
    "build": "gulp compile",
    "test": "npm run build"
  }
}