{
  "stagingFolderPath": "build",
  "files": [
    "manifest",
    "source/**/*.*",
    "components/**/*.*"
  ],
  "extends": "bsconfig.json",
  "plugins": [
    "maestro-roku-bsc-plugin",
    "rooibos-roku"
  ],
  "rooibos": {
    "isRecordingCodeCoverage": false,
    "testsFilePattern": null,
    "tags": [
      "!integration",
      "!deprecated",
      "!fixme",
      "!tbd"
    ],
    "showOnlyFailures": true,
    "catchCrashes": true,
    "lineWidth": 70,
    "sendHomeOnFinish": false,
    "failFast": false
  },
  "rokuLog": {
    "strip": false,
    "insertPkgPath": true
  },
  "maestro": {
    "excludeFilters": [
      "**/roku_modules/**/*",
      "**/rooibos-roku/**/*"
    ],
    "nodeClasses": {
      "buildForIDE": false,
      "generateTestUtils": true
    },
    "extraValidation": {
      "doExtraValidation": false,
      "excludeFilters": [],
      "doExtraImportValidation": false
    }
  }
}