<?xml version='1.0' encoding='UTF-8'?>
<component
    name='AppController'
    extends='mv_BaseView'>
  <interface>
    <field
        id='isFocusedOnContent'
        type='boolean'
        value='false'
        onChange='onIsFocusedOnContentChange' />

    <!-- Global app services -->
    <function name='exitFromDeepLinking' />

    <!-- call this when wanting to enter deep linking, if for example
    from live deeplinking roInputEvent -->
    <function name='processDeeplinkingArgs' />

    <function name='playSelection' />
    <function name='toggleVideoPlayerVisible' />
  </interface>

  <children>
    <!-- Main Menu -->
    <LayoutGroup
        id='topNav'
        layoutDirection='horizontal'
        horizAlignment='right'
        translation='[1080,50]'>
		</LayoutGroup>
    <Video id='video' />

    <Rectangle
        color='#ff0000'
        width='1920'
        height='100'
        translation='[0, 1000]' />
    <Label
        id='infoLabel'
        translation='[50, 1000]'
        color='#ffffff' />
  </children>

</component>
