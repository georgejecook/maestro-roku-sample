{
  "views": [
    {
      "_type": "mv_Rectangle",
      "size": [1920, 1080],
      "color": "~colors.background.darkPurple"
    },
    {
      "id": "bgRect",
      "_type": "mv_Rectangle",
      "translation": [0, 0],
      "color": "#6a307d"
    },
    {
      "id": "controlsGroup",
      "_type": "mv_ControlsGroup",
      "translation": [200, 200],
      "layoutMode": "vert",
      "keyDirection": "vert",
      "itemSpacings": [40],
      "observe": {
        "selectedIndex": "onButtonIndexChange"
      },
      "_initializeAfterCreatingChildren": true,
      "_children": [
        {
          "id": "button1",
          "_type": "mv_Button",
          "text": "Button 1",
          "_dataMap": {
            "text": "json.title"
          }
        },
        {
          "id": "button2",
          "_type": "mv_Button",
          "styleKey": "buttonScreen.buttons.blue",
          "iconStyle": "~buttonScreen.icons.star",
          "text": "Reload day 0"
        },
        {
          "id": "button3",
          "_type": "mv_Button",
          "styleKey": "buttonScreen.buttons.red",
          "text": "Item Up"
        },
        {
          "id": "button4",
          "_type": "mv_Button",
          "styleKey": "buttonScreen.buttons.blue",
          "iconStyle": "~buttonScreen.icons.star",
          "text": "Item Down"
        },
        {
          "id": "button5",
          "_type": "mv_Button",
          "styleKey": "buttonScreen.buttons.red",
          "text": "Use: grids"
        }
      ]
    },
    {
      "id": "fixedLayoutGroup",
      "_type": "mv_ControlsGroup",
      "translation": [600, 200],
      "layoutMode": "vert",
      "keyDirection": "vert",
      "itemSpacings": [40],
      "_initializeAfterCreatingChildren": true,
      "_children": [
        {
          "id": "fixed1",
          "_type": "mv_Button",
          "styleKey": "buttonScreen.buttons.rectangle",
          "iconStyle": "~buttonScreen.icons.play",
          "text": "PLAY",
          "horizAlign": "right"
        },
        {
          "id": "fixed2",
          "_type": "mv_Button",
          "styleKey": "buttonScreen.buttons.rectangle",
          "iconStyle": "~buttonScreen.icons.play",
          "text": "IP LEFT",
          "iconPosition": "left",
          "horizAlign": "left"
        },
        {
          "id": "fixed3",
          "_type": "mv_Button",
          "styleKey": "buttonScreen.buttons.circle",
          "iconStyle": "~buttonScreen.icons.play",
          "text": "",
          "size": [80, 80]
        },
        {
          "id": "fixed4",
          "_type": "mv_Button",
          "styleKey": "buttonScreen.buttons.round_white",
          "text": "IP R T R",
          "horizAlign": "right",
          "iconPosition": "right",
          "iconStyle": "~buttonScreen.icons.play"
        },
        {
          "id": "fixed5",
          "_type": "mv_Button",
          "styleKey": "buttonScreen.buttons.round_white",
          "text": "IP R T L",
          "horizAlign": "left",
          "iconPosition": "right",
          "iconStyle": "~buttonScreen.icons.play"
        },
        {
          "id": "fixed6",
          "_type": "mv_Button",
          "styleKey": "buttonScreen.buttons.round_white",
          "iconStyle": "~buttonScreen.icons.play",
          "text": "Watch now",
          "horizAlign": "right"
        },
        {
          "id": "fixed7",
          "_type": "mv_Button",
          "styleKey": "buttonScreen.buttons.rectangle",
          "iconStyle": "~buttonScreen.icons.check",
          "text": "",
          "size": [300, 50]
        },

        {
          "id": "fixed8",
          "_type": "mv_Button",
          "styleKey": "buttonScreen.buttons.rectangle_subtext",
          "iconStyle": "~buttonScreen.icons.play",
          "text": "START WATCHING",
          "subText": "Watch episode 1",
          "size": [350, 150]
        }
      ]
    },
    {
      "id": "autoSizeLayoutGroup",
      "_type": "mv_ControlsGroup",
      "translation": [1400, 200],
      "layoutMode": "vert",
      "keyDirection": "vert",
      "itemSpacings": [40],
      "_initializeAfterCreatingChildren": true,
      "_children": [
        {
          "id": "auto1",
          "_type": "mv_Button",
          "styleKey": "buttonScreen.buttons.rectangle",
          "iconStyle": "~buttonScreen.icons.play",
          "size": [50, 60],
          "text": "IP C T C",
          "iconPosition": "right",
          "autosize": true
        },
        {
          "id": "auto2",
          "_type": "mv_Button",
          "styleKey": "buttonScreen.buttons.rectangle",
          "iconStyle": "~buttonScreen.icons.play",
          "size": [50, 60],
          "text": "IP L T L",
          "iconPosition": "left",
          "autosize": true
        },
        {
          "id": "auto3",
          "_type": "mv_Button",
          "styleKey": "buttonScreen.buttons.circle",
          "iconStyle": "~buttonScreen.icons.play",
          "size": [80, 80],
          "iconPosition": "center",
          "text": ""
        },
        {
          "id": "auto4",
          "_type": "mv_Button",
          "styleKey": "buttonScreen.buttons.round_white",
          "text": "IP R T R",
          "iconPosition": "right",
          "iconStyle": "~buttonScreen.icons.play",
          "size": [50, 60],
          "autosize": true
        },
        {
          "id": "auto5",
          "_type": "mv_Button",
          "styleKey": "buttonScreen.buttons.round_white",
          "text": "IP R T L",
          "iconPosition": "right",
          "iconStyle": "~buttonScreen.icons.play",
          "size": [50, 60],
          "autosize": true
        },
        {
          "id": "auto6",
          "_type": "mv_Button",
          "styleKey": "buttonScreen.buttons.round_white",
          "iconStyle": "~buttonScreen.icons.play",
          "iconPosition": "centerLeft",
          "size": [200, 60],
          "text": "Play",
          "autosize": true
        },
        {
          "id": "auto7",
          "_type": "mv_Button",
          "styleKey": "buttonScreen.buttons.round_white",
          "iconStyle": "~buttonScreen.icons.play",
          "iconPosition": "centerRight",
          "size": [300, 60],
          "text": "Watch now",
          "autosize": true
        },
        {
          "id": "auto8",
          "_type": "mv_Button",
          "styleKey": "buttonScreen.buttons.rectangle",
          "iconStyle": "~buttonScreen.icons.check",
          "size": [50, 60],
          "text": "",
          "autosize": true
        },

        {
          "id": "auto9",
          "_type": "mv_Button",
          "styleKey": "buttonScreen.buttons.rectangle_subtext",
          "iconStyle": "~buttonScreen.icons.play",
          "size": [50, 150],
          "text": "START WATCHING",
          "subText": "Watch episode 1",
          "autosize": true
        }
      ]
    }
  ],
  "$styles": {
    "buttonScreen": {
      "buttons": {
        "red": {
          "$extends": "mv.Button.default",
          "normal.backgroundPoster.blendColor": "~colors.general.light-red",
          "focused.backgroundPoster.blendColor": "~colors.general.red",
          "selected.backgroundPoster.blendColor": "~colors.general.red",
          "normal.label.color": "~colors.general.black",
          "focused.label.color": "~colors.general.white",
          "selected.label.color": "~colors.general.white"
        },
        "blue": {
          "$extends": "mv.Button.default",
          "normal.backgroundPoster.blendColor": "~colors.general.light-blue",
          "focused.backgroundPoster.blendColor": "~colors.general.blue",
          "selected.backgroundPoster.blendColor": "~colors.general.blue",
          "normal.label.color": "~colors.general.black",
          "focused.label.color": "~colors.general.white",
          "selected.label.color": "~colors.general.white"
        },
        "round": {
          "$extends": "mv.Button.default",
          "normal.backgroundPoster.uri": "pkg:/images/backgrounds/background-round-solid-$$RES$$.9.png",
          "focused.backgroundPoster.uri": "pkg:/images/backgrounds/background-round-solid-$$RES$$.9.png",
          "selected.backgroundPoster.blendColor": "~colors.general.blue",
          "focused.label.color": "~colors.general.white",
          "selected.label.color": "~colors.general.white"
        },
        "round_white": {
          "$extends": "mv.Button.default",
          "normal.backgroundPoster.uri": "pkg:/images/backgrounds/background-round-solid-$$RES$$.9.png",
          "focused.backgroundPoster.uri": "pkg:/images/backgrounds/background-round-solid-$$RES$$.9.png",
          "normal.backgroundPoster.blendColor": "~colors.general.white",
          "focused.backgroundPoster.blendColor": "~colors.general.grey",
          "normal.label.color": "~colors.general.black",
          "focused.label.color": "~colors.general.white",
          "selected.label.color": "~colors.general.black",
          "normal.label.translation": [10, 0],
          "normal.iconPoster.translation": [10, 0]
        },
        "circle": {
          "$extends": "mv.Button.default",
          "normal.backgroundPoster.uri": "pkg:/images/backgrounds/button-circle.png",
          "focused.backgroundPoster.uri": "pkg:/images/backgrounds/button-circle.png",
          "focused.backgroundPoster.blendColor": "~colors.general.blue",
          "normal.label.color": "~colors.general.black",
          "focused.label.color": "~colors.general.white",
          "selected.label.color": "~colors.general.white"
        },
        "rectangle": {
          "$extends": "mv.Button.default",
          "normal.backgroundPoster.uri": "pkg:/images/backgrounds/button-square-bg.9.png",
          "focused.backgroundPoster.uri": "pkg:/images/backgrounds/button-square-bg.9.png",
          "focused.backgroundPoster.blendColor": "~colors.general.blue",
          "normal.label.color": "~colors.general.white",
          "focused.label.color": "~colors.general.white",
          "selected.label.color": "~colors.general.white"
        },
        "rectangle_subtext": {
          "$extends": "mv.Button.default",
          "normal.backgroundPoster.uri": "pkg:/images/backgrounds/button-square-bg.9.png",
          "normal.subtextLabel.translation": [0, 100],
          "focused.subtextLabel.translation": [0, 100],
          "focused.backgroundPoster.uri": "pkg:/images/backgrounds/button-square-bg.9.png",
          "focused.backgroundPoster.blendColor": "~colors.general.blue",
          "normal.label.color": "~colors.general.green",
          "focused.label.color": "~colors.general.red",
          "selected.label.color": "~colors.general.white",
          "normal.label.fontKey": "~fonts.title-06",
          "normal.subtextLabel.fontKey": "~fonts.caption"
        }
      },
      "icons": {
        "star": {
          "normal": {
            "blendColor": "~colors.general.black",
            "size": [48, 48],
            "translation": [5, 0],
            "uri": "pkg:/images/small-star-$$RES$$.png"
          },
          "focused": {
            "blendColor": "~colors.general.green"
          }
        },
        "play": {
          "normal": {
            "size": [48, 48],
            "blendColor": "~colors.general.white",
            "uri": "pkg:/images/play-icon-$$RES$$.png"
          },
          "focused": {
            "blendColor": "~colors.general.green"
          }
        },
        "check": {
          "normal": {
            "size": [30, 30],
            "blendColor": "~colors.general.white",
            "uri": "pkg:/images/check.png"
          },
          "focused": {
            "blendColor": "~colors.general.green"
          }
        }
      }
    }
  }
}
